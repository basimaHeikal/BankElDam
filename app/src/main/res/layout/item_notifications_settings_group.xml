<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="#f2f2f2">
            <!--  divider -->
            <View
                android:id="@+id/divTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#acacac" >

            </View>
            <RelativeLayout
                android:id="@+id/kk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/NotSettingsTvLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="المدينه :"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorNav"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/divBelowLablel"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#acacac"
                android:layout_below="@+id/kk">

            </View>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/NotSettingsRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divBelowLablel"
                android:background="@color/colorWhite"
                />
            <View
                android:id="@+id/divBelowRecycler"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#acacac"
                android:layout_below="@+id/NotSettingsRv">

            </View>

            <View
                android:id="@+id/divRight"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#acacac"
                android:layout_alignParentRight="true">

            </View>
            <View
                android:id="@+id/divLeft"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#acacac"
                android:layout_alignParentLeft="true">

            </View>

        </RelativeLayout>
</LinearLayout>